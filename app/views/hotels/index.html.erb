  <p id="notice"><%= notice %></p>

  <h1 class="listing">Listing Hotels</h1>

  <table align="center">


  <tbody>
    <% @hotels.each do |hotel| %>

      <div> 
      <tr>
         <td><img src= <%= hotel.img_url %> class="show-img-size">
         </td> 

          <td>
        <div class="hotel-name">
         <%= hotel.name %>
        </div>
        </td>
       
        <td><% ranking = hotel.stars %> 
        <%= case ranking 
        when 1 then  "*"
        when 2 then  "**"
        when 3 then  "***"
        when 4 then  "****"
        when 5 then  "*****"
        end %></td>
        
      
      </tr>

       <td><%= link_to 'Show', hotel %></td>
       <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
       
    <% end %>
  </tbody>
  </table>




